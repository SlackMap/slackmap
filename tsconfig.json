{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "orientjs": ["@types/orientjs.d.ts"],
      "@slackmap/api/orient": ["libs/api/orient/src/index.ts"],
      "@slackmap/core": ["libs/core/src/index.ts"],
      "@slackmap/core/api": ["libs/core/src/lib/api/index.ts"],
      "@slackmap/ui-common": ["libs/ui-common/src/index.ts"],
      "@slackmap/ui-core": ["libs/ui-core/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
