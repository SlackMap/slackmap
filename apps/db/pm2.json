{
  "apps": [
    {
      "name": "db",
      "cwd": "./",
      "script": "./current/bin/server.sh",
      "env": {
        "ORIENTDB_ROOT_PASSWORD": "root"
      },
      "exec_interpreter": "bash",
      "exec_mode": "fork_mode",
      "kill_timeout": 30000,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "error_file": "./logs/pm2/db-err.log",
      "out_file": "./logs/pm2/db-out.log"
    }
  ]
}
